{
  "manifest_version": 3,
  "name": "Random Image Popup",
  "version": "1.0",
  "description": "A Chrome extension that pops up an image at random intervals.",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
